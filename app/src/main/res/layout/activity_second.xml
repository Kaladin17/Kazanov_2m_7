<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    tools:context=".SecondActivity2">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_one"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/dark_grey"
        tools:ignore="MissingConstraints">
        <ImageView
            app:layout_constraintTop_toTopOf="@id/container_one"
            app:layout_constraintStart_toStartOf="@id/container_one"
            android:layout_width="40dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_menu"
            android:layout_marginStart="24dp"
            />
        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="40dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_center_icon"
            />
        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="40dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_search"
            android:layout_marginEnd="12dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_policies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/container_one"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:text="Policies"
        android:textSize="36sp"
        android:textStyle="bold"
        />
    <com.google.android.material.button.MaterialButton
        style="@style/Second.Button"
        android:id="@+id/btn_one"
        android:text="Policy"
        app:layout_constraintTop_toBottomOf="@id/tv_policies"
        tools:ignore="MissingConstraints"/>
    <com.google.android.material.button.MaterialButton
        style="@style/Second.Button"
        android:id="@+id/btn_two"
        android:text="Product Category"
        app:layout_constraintTop_toBottomOf="@id/btn_one"
        tools:ignore="MissingConstraints"
        />
    <com.google.android.material.button.MaterialButton
        style="@style/Second.Button"
        android:id="@+id/btn_three"
        android:text="Origin Country"
        app:layout_constraintTop_toBottomOf="@id/btn_two"
        tools:ignore="MissingConstraints"
        />
    <com.google.android.material.button.MaterialButton
        style="@style/Second.Button"
        android:id="@+id/btn_four"
        android:text="Brand"
        app:layout_constraintTop_toBottomOf="@id/btn_three"
        tools:ignore="MissingConstraints"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintTop_toTopOf="@id/btn_one"
        app:layout_constraintBottom_toBottomOf="@id/btn_one"
        app:layout_constraintEnd_toEndOf="@+id/btn_one"
        android:layout_marginEnd="16dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintTop_toTopOf="@id/btn_two"
        app:layout_constraintBottom_toBottomOf="@id/btn_two"
        app:layout_constraintEnd_toEndOf="@+id/btn_two"
        android:layout_marginEnd="16dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintTop_toTopOf="@id/btn_three"
        app:layout_constraintBottom_toBottomOf="@id/btn_three"
        app:layout_constraintEnd_toEndOf="@+id/btn_three"
        android:layout_marginEnd="16dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintTop_toTopOf="@id/btn_four"
        app:layout_constraintBottom_toBottomOf="@id/btn_four"
        app:layout_constraintEnd_toEndOf="@+id/btn_four"
        android:layout_marginEnd="16dp"
        />
    <TextView
        android:id="@+id/tv_text_sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/container_two"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="88dp"
        android:text="Current Policies"
        android:textSize="36sp"
        android:textStyle="bold"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_closed"
        android:layout_width="200dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/container_two"
        app:cornerRadius="16dp"
        android:text="Export as CSV"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:backgroundTint="@color/red"
        android:layout_marginBottom="12dp"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_two"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/white"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white">
    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>